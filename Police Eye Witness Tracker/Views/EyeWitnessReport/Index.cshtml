@model IEnumerable<EyeWitnessReport>
@{
    ViewData["Title"] = "Index";
}




@*<h1>EyeWitnessReport</h1>*@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Eye Witness Report List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="EyeWitnessReport" asp-action="ReportanIncidence" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Report an Incidence
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
             <th>
                LastName
            </th>
             <th>
                PhoneNum
            </th>
            <th>
                ContactAddress
            </th>
            <th>
                NatureofIncidence
            </th>
            <th>
                LocationofIncidence
            </th>
            <th>
                IncidenceReportNarration
            </th>
            <th>
                CreatedDateTime
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.FirstName
                </td>
                <td width="50%">
                    @obj.LastName
                </td>
                <td width="50%">
                    @obj.PhoneNum
                </td>
                <td width="50%">
                    @obj.ContactAddress
                </td>
                <td width="50%">
                    @obj.NatureofIncidence
                </td>
                <td width="50%">
                    @obj.LocationofIncidence
                </td>
                <td width="50%">
                    @obj.IncidenceReportNarration
                </td>
                <td width="50%">
                    @obj.CreatedDateTime
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="EyeWitnessReport" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-fill"></i> Edit</a>
                        <a asp-controller="EyeWitnessReport" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>